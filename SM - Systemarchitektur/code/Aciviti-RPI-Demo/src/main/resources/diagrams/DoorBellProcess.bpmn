  <process id="rpiDoorBellProcess" name="RPI - Door Bell Process" isExecutable="true" activiti:candidateStarterUsers="openhab" activiti:candidateStarterGroups="house">
    <endEvent id="endevent1" name="End"></endEvent>
    <scriptTask id="receivingPresenceAtHomeState" name="Status &quot;Zu Hause&quot; abrufen" scriptFormat="groovy" activiti:autoStoreVariables="false">
      <script>  import groovy.json.*
 
def url = "http://pi:raspberryi@raspberrypi.local:8080/rest/items/presenceAtHome".toURL().text
def root = new JsonSlurper().parseText(url)
 
if (root.state == "ON"){
	execution.setVariable("presenceAtHome", true)
}else{
	execution.setVariable("presenceAtHome", false)
}
</script>
    </scriptTask>
    <exclusiveGateway id="exclusivegateway1" name="Exclusive Gateway"></exclusiveGateway>
    <sequenceFlow id="PresentAtHome" name="User ist zu Hause" sourceRef="exclusivegateway1" targetRef="endevent1">
      <conditionExpression xsi:type="tFormalExpression"><![CDATA[${presenceAtHome}]]></conditionExpression>
    </sequenceFlow>
    <userTask id="initiateCounterMeasurementsUT" name="Gegenmassnahmen einleiten" activiti:assignee="dani" activiti:candidateUsers="dani" activiti:candidateGroups="security">
      <documentation>Während Ihrer Abwesenheit wurde um ${doorBellRangDateTime} an Ihrer Tür geklingelt. Bitte definsieren Sie die zu treffenden Massnahmen.</documentation>
      <extensionElements>
        <activiti:formProperty id="initiateCounterMeasurement" name="Massnahme einleiten" type="boolean" variable="initiateCounterMeasurement" default="false" required="true"></activiti:formProperty>
      </extensionElements>
    </userTask>
    <sequenceFlow id="presenceAway" name="User nicht zu Hause" sourceRef="exclusivegateway1" targetRef="initiateCounterMeasurementsUT">
      <conditionExpression xsi:type="tFormalExpression"><![CDATA[${!presenceAtHome}]]></conditionExpression>
    </sequenceFlow>
    <endEvent id="endevent2" name="End"></endEvent>
    <sequenceFlow id="flow3" sourceRef="initiateCounterMeasurementsUT" targetRef="endevent2"></sequenceFlow>
    <sequenceFlow id="flow5" sourceRef="receivingPresenceAtHomeState" targetRef="exclusivegateway1"></sequenceFlow>
    <startEvent id="doorBellRang" name="Door Bell Rang" activiti:initiator="openhab"></startEvent>
    <sequenceFlow id="flow6" sourceRef="doorBellRang" targetRef="receivingPresenceAtHomeState"></sequenceFlow>
    <dataObject id="presenceAtHome" name="presenceAtHome" itemSubjectRef="xsd:boolean">
      <extensionElements>
        <activiti:value>false</activiti:value>
      </extensionElements>
    </dataObject>
    <dataObject id="initiateCounterMeasurement" name="initiateCounterMeasurement" itemSubjectRef="xsd:boolean">
      <extensionElements>
        <activiti:value>false</activiti:value>
      </extensionElements>
    </dataObject>
    <dataObject id="doorBellRangDateTime" name="doorBellRangDateTime" itemSubjectRef="xsd:datetime">
      <extensionElements>
        <activiti:value></activiti:value>
      </extensionElements>
    </dataObject>
  </process>
